{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "contracts-ts": ["index.ts"], // Map the package name to its source entry point
      "contracts-ts/*": ["*"] // Map subpaths if needed
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
