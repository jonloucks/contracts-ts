{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleNameMapper": {
   "^contracts-ts$": "<rootDir>/src/index.ts",
   "^contracts-ts/(.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "roots": [
    "<rootDir>/src"
  ],
  "testMatch": [
    "**/__tests__/**/*.ts",
    "**/?(*.)+(spec|test).ts"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/test/**",
    "!src/**/*.test.ts",
    "!src/**/__tests__/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html",
    "json-summary"
  ]
}
