{
  "name": "@jonloucks/contracts-ts",
  "version": "2.0.2",
  "description": "Typescript Dependency Contracts for dependency inversion",
  "private": true,
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "require": "./index.js",
      "import": "./index.js",
      "default": "./index.js"
    },
    "./api/*": {
      "types": "./api/*.d.ts",
      "require": "./api/*.js",
      "import": "./api/*.js",
      "default": "./api/*.js"
    },
    "./auxiliary/*": {
      "types": "./auxiliary/*.d.ts",
      "require": "./auxiliary/*.js",
      "import": "./auxiliary/*.js",
      "default": "./auxiliary/*.js"
    }
  },
  "files": [
    "*",
    "!never-publish/**/*",
    "!**/*.test.*",
    "!**/*.spec.*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "tsx --test $(find src -name '*.test.ts')",
    "test:watch": "tsx --test --watch $(find src -name '*.test.ts')",
    "test:coverage": "npx c8 --check-coverage --lines 95 --functions 95 --branches 95 --statements 95 --reporter=lcov npx tsx --test $(find src -name '*.test.ts')",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run build",
    "before:publish": "npm run clean && npm run compile && cp package.json dist && cp README.md dist && cd dist && npm pkg delete private",
    "after:publish": "npm run clean",
    "prepare": "npm run build",
    "docs": "typedoc --options typedoc.json",
    "badges": "npx badges-ts generate",
    "discover": "npx badges-ts discover",
    "clean": "rm -rf dist",
    "compile": "tsc",
    "postversion": "npm run applyversion",
    "applyversion": "npx badges-ts apply-version",
    "pack-package": "npm run before:publish && mkdir -p packs && cd dist && npm pack && mv *.tgz ../packs/ && npm run after:publish"
  },
  "keywords": [
    "typescript",
    "contracts",
    "dependency-injection",
    "dependency-inversion"
  ],
  "author": "Jon Loucks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonloucks/contracts-ts.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@jonloucks/badges-ts": "^1.1.0",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "c8": "^10.1.3",
    "eslint": "^10.0.0",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3"
  }
}